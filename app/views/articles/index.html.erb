<h1>Listing articles</h1>
<%= link_to '新規記事作成', new_article_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to '詳細へ', article_path(article) %></td>
    </tr>
  <% end %>
</table>