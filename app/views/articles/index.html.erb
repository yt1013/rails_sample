<h1>記事一覧</h1>
<%= link_to '新規記事作成', new_article_path %>

<table>
  <tr>
    <th>id</th>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
        <td><%= article.id %></td>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to '詳細', article_path(article) %></td>
        <td><%= link_to '編集', edit_article_path(article) %></td>
    </tr>
  <% end %>
</table>